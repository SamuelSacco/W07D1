<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <h2>Welcome <%= current_user.username %>!</h2>
      <form action="new_session_url" method="get">
        <button>logout</button>
      </form>
    <% else %>

      <form action="new_session_url" method="get">
        <button>login</button>
      </form>

    <% end %>
    <%= yield %>
  </body>
</html>
